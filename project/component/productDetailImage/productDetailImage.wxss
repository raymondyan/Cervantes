

.swiperBox image {
  width: 750rpx;
  height: 750rpx;
  margin-top: 60rpx;
  border-radius: 18rpx;
}

.swiperBox swiper-item {
  display: flex;
  justify-content: center;
  align-items: center;
}

.swiperBox swiper {
  height: 750rpx;
  position: relative;
}

.swiper-dots{
  display: flex;
  justify-content: center;
  align-items: center;
  padding-bottom: 20rpx;
}

.swiper-dot{
  width: 10px;
  height: 3px;
  background: #000;
  border-radius: 3px;
}

.swiper-dot-active{
  background: #dc2229;
  width: 15px;
  transition: width 0.1s linear;
}

.swiper-dot:not(:last-child) {
  margin-right: 15rpx;
}