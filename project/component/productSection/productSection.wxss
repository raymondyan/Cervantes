.section {
  border-top: 20rpx #eee solid;
  border-bottom: 1px #cdcdcd solid;
  padding: 30rpx 0 60rpx;
}

.sectionTitle {
  text-align: center;
  font-size: 35rpx;
  color: #111;
}

.sectionEnTitle {
  text-align: center;
  font-size: 28rpx;
  color: #AAA;
  font-weight: 200;
}

.sectionTitleDivide {
  content: " ";
  height: 4rpx;
  width: 30px;
  background-color: #dc2229;
  margin: 10rpx auto 40rpx;
}

.prodcutList {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.product {
  width: 40%;
  padding-bottom: 50rpx;
}

.product image {
  width: 300rpx;
  height: 300rpx;
  /*border: 1rpx solid #eee;*/
  border-radius: 0;
}

