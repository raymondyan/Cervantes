.product .name {
  font-size: 26rpx;
  color: #333;
  font-weight: 300;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  word-break: break-all;
}

.product .price {
  font-size: 32rpx;
  font-weight: 300;
  color: #dc2229;
}

.more {
  text-align: center;
  color: #444;
   padding-top: 10rpx; 
  font-size: 28rpx;
}

.more::after {
  content: " ";
  display: inline-block;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
  height: 7px;
  width: 7px;
  border-width: 1px 1px 0 0;
  border-color: #888;
  border-style: solid;
  position: relative;
  top: -1px;
  margin-left: 0.3em;
  text-align: right;
  color: #444;
}