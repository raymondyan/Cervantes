page {
  padding-bottom: 100rpx;
}

.operation {
  width: 750rpx;
  position: fixed;
  bottom: 0;
  background-color: #f5f5f5;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.operation image {
  width: 50rpx;
  height: 50rpx;
}

.buyIcon {
  /* margin: 0 auto; */
  background: #dc2229;
  color: white;
  font-size: 28rpx;
  border-radius: 6rpx;
  width: 400rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border: 1rpx solid #eee;
}

.optBtn {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  color: #444;
}

.brand {
  border-bottom: 10rpx #eee solid;
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.brand image {
  height: 60rpx;
  width: 250rpx;
}

.brand .tips {
  color: #888;
  font-size: 28rpx;
  margin-right:40rpx;
}

.brand .tips::after {
  content: " ";
  display: inline-block;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
  height: 7px;
  width: 7px;
  border-width: 1px 1px 0 0;
  border-color: #888;
  border-style: solid;
  position: relative;
  top: -1px;
  margin-left: 0.3em;
  text-align: right;
}

