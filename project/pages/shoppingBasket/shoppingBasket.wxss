.deliveryAndChange {
  position: fixed;
  top: 0;
  width: 750rpx;
  text-align: center;
  background-color: #f5f5f5;
  height: 70rpx;
  line-height: 70rpx;
  color: #dc2229;
  font-size: 30rpx;
  font-weight: 300; 
  border-bottom: 1px #cdcdcd solid;
  z-index: 1006;
}

.deliveryAndChange::after {
  content: " ";
  display: inline-block;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
  height: 7px;
  width: 7px;
  border-width: 1px 1px 0 0;
  border-color: #dc2229;
  border-style: solid;
  position: relative;
  top: -1px;
  margin-left: 0.3em;
  text-align: right;
  color: #444;
}

.emptyCart {
  background-color: #eee;
  height: 600rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.emptyCart .emptyCartImg {
  width: 140rpx;
  height: 140rpx;
}

.emptyCart .greeting {
  color: #444;
  font-size: 30rpx;
  font-weight: 300;
  padding-top: 20rpx;
}

.emptyCart .greeting::after {
  content: " ";
  display: inline-block;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
  height: 7px;
  width: 7px;
  border-width: 1px 1px 0 0;
  border-color: #444;
  border-style: solid;
  position: relative;
  top: -1px;
  margin-left: 0.3em;
  text-align: right;
  color: #444;
}

.orderList {
  margin-top: 90rpx;
  padding-bottom: 110rpx;
}

.order {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.order .icon, .summary .icon {
  width: 40rpx;
  height: 40rpx;
  margin: 0 20rpx;
}

.order .image {
  width: 180rpx;
  height: 180rpx;
  border: 1rpx solid #eee;
}

.order .config {
  width: 350rpx;
  padding-left: 20rpx;
}

.order .name {
  font-size: 26rpx;
  color: #333;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  word-break: break-all;
}

.order .type {
  font-size: 28rpx;
  color: #333;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  word-break: break-all;
}

.order .price {
  font-size: 34rpx;
  font-weight: 300;
  color: #dc2229;
  margin-left: 15rpx;
}

.order .delete {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 20rpx;
}

.adjustAmount {
  margin-top: 15rpx;
  display: flex;
  align-items: center;
  color: #444;
  font-size: 32rpx;
}

.minus {
  border: 1rpx solid #aaa;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.count {
  border-top: 1rpx solid #aaa;
  border-bottom: 1rpx solid #aaa;
  width: 70rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #dc2229;
}

.add {
  border: 1rpx solid #aaa;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.adjustAmount .disable {
  color: #ccc;
}

.summary {
  width: 750rpx;
  height: 100rpx;
  align-items: center;
  display: flex;
  position: fixed;
  bottom: 0;
  background-color: #f5f5f5;
  font-size: 32rpx;
  color: #444;
}

.summary .purchase {
  position: absolute;
  right: 20rpx;
  width: 320rpx;
  height: 80rpx;
  border-radius: 6rpx;
  background-color: #dc2229;
  color: white;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.summary .selectAll {
  margin-right: 40rpx;
}

.summary .price {
  color: #dc2229;
}
